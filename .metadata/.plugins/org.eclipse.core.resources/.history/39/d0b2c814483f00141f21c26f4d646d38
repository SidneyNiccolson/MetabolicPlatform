package mypackage;

//import Gui library
import javax.swing.*;

import java.awt.*;
import java.awt.event.*;

public class BioCascadeModeller extends JFrame {
	//create a panel
	JPanel panel = new JPanel();

	//buttons
	JCheckBox fw = new JCheckBox("Food Waste");
	JCheckBox hw = new JCheckBox("Human Waste");
	JCheckBox ur = new JCheckBox("Urine");
	JButton cont = new JButton("Continue");
	ButtonGroup group = new ButtonGroup();
	
	//header of the 1st frame Gui
	JLabel header = new JLabel("Potential Recyclable Source  ");
	

	
	
	// constructor
	BioCascadeModeller() {
		super("BioCascadeModeller v0.1");
		setLayout(new GridLayout(0,1));
		panel.add(header);
	
		group.add(fw);
		group.add(hw);
		group.add(ur);
		add(panel);
		add(fw);
		add(hw);
		add(ur);
		add(cont);
		
	
	}

	

	// main (first part of code thats is going to be runned)
	public static void main(String[] args) {
		// create an object of the BioCascadeModeller type
		BioCascadeModeller bcm = new BioCascadeModeller();
		// standard housekeeping
		bcm.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		bcm.setSize(300,400);
		bcm.setVisible(true);
		
		
		
		
	}
}
